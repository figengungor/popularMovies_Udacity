<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <com.figengungor.popularmovies.ui.custom.AspectRatioImageView
        android:id="@+id/profileIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:aspectRatio="1.5027"
        app:aspectRatioEnabled="true"
        tools:src="@drawable/placeholder_poster" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileIv"
        android:layout_alignLeft="@+id/profileIv"
        android:layout_alignRight="@+id/profileIv"
        android:layout_centerHorizontal="true"
        android:background="@color/headerTransparent"
        android:gravity="center"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/white"
        tools:text="Name" />

    <TextView
        android:id="@+id/roleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profileIv"
        android:layout_alignRight="@+id/profileIv"
        android:layout_alignTop="@+id/profileIv"
        android:layout_centerHorizontal="true"
        android:background="@color/headerTransparent"
        android:gravity="center"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/white"
        tools:text="Role" />

</RelativeLayout>