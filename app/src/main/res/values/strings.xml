<resources xmlns:xliff="http://schemas.android.com/apk/res-auto">
    <string name="app_name">Popular Movies</string>


    <string name="backdrop_content_description">Movie backdrop image</string>
    <string name="poster_content_description">Movie poster image</string>

    <!--Error messages-->
    <string name="time_out">Time out!</string>
    <string name="no_internet">No Internet!</string>
    <string name="no_data_found">No data found!</string>
    <string name="unexpected_error">Opsss. Unexpected error occurred.</string>

    <!--Movie List Type Values-->
    <string name="popular" translatable="false">popular</string>
    <string name="top_rated" translatable="false">top_rated</string>
    <string name="favorite" translatable="false">favorite</string>

    <!--Movie List Type Options-->
    <string name="popular_option">Popular</string>
    <string name="top_rated_option">Top rated</string>
    <string name="favorite_option">Favorite</string>


    <string name="movie_list_type_default">@string/popular</string>
    <string name="movie_list_type_spinner">Movie list type spinner</string>

    <!--Movie Detail-->
    <!--https://stackoverflow.com/questions/24785305/android-getstring-xliff-format-float-double-->
    <string name="rating"><xliff:g id="rating">%1$.1f</xliff:g>/10</string>
    
    <!--Accessibility-->
    <string name="a11y_movie_title">Movie title: <xliff:g id="title">%1$s</xliff:g></string>
    <string name="a11y_release_date">Release date: <xliff:g id="release_date">%1$s</xliff:g></string>
    <string name="a11y_rating">Rating: <xliff:g id="rating">%1$.1f</xliff:g> over 10</string>
    <string name="a11y_overview">Overview: <xliff:g id="overview">%1$s</xliff:g></string>
    <string name="retry">Retry</string>

    <!--ContentProvider-->
    <string name="content_authority" translatable="false">com.figengungor.popularmovies</string>
    <string name="no_favorites_found">You have no favorite movie yet.</string>

</resources>
